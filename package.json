{
  "name": "open-ui-library",
  "version": "1.0.0",
  "description": "A community-driven, open-source library of reusable UI components",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -C apps/web dev",
    "build": "pnpm -C apps/web build",
    "lint": "eslint .",
    "type-check": "pnpm -C apps/web type-check",
    "validate:metadata": "tsx packages/tooling/scripts/validate-metadata.ts",
    "validate": "pnpm lint && pnpm type-check && pnpm validate:metadata && pnpm -C apps/web build"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0"
  },
  "packageManager": "pnpm@9.15.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/alirezazim03/OpenUI-Library.git"
  },
  "license": "MIT",
  "keywords": [
    "ui-components",
    "react",
    "tailwind",
    "open-source",
    "design-system"
  ],
  "dependencies": {
    "react-icons": "^5.5.0",
    "react-swipeable": "^7.0.2"
  }
}
